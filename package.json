{
  "name": "backend",
  "version": "0.0.0",
  "description": "Initial project",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "NODE_ENV=develop ts-node -r tsconfig-paths/register src/main.ts",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:dev": "NODE_ENV=staging node dist/main.js",
    "start:preprod": "NODE_ENV=preproduction node dist/main.js",
    "start:prod": "NODE_ENV=production node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "migrate": "NODE_ENV=develop ts-node ./node_modules/typeorm/cli migration:run",
    "migrate:revert": "NODE_ENV=develop ts-node ./node_modules/.bin/typeorm migration:revert",
    "migrate:generate": "NODE_ENV=develop ts-node ./node_modules/.bin/typeorm migration:generate -n",
    "migrate:dev": "NODE_ENV=staging ts-node ./node_modules/.bin/typeorm migration:run",
    "migrate:prod": "NODE_ENV=production ts-node ./node_modules/.bin/typeorm migration:run",
    "migrate:preprod": "NODE_ENV=preproduction ts-node ./node_modules/.bin/typeorm migration:run"
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "6.8.2",
    "@nestjs/core": "6.8.2",
    "@nestjs/jwt": "^6.0.0",
    "@nestjs/microservices": "6.0.2",
    "@nestjs/passport": "^6.0.0",
    "@nestjs/platform-express": "6.8.2",
    "@nestjs/platform-socket.io": "^6.11.7",
    "@nestjs/typeorm": "^6.2.0",
    "@nestjs/websockets": "^6.0.2",
    "@sendgrid/mail": "^7.1.1",
    "@sentry/node": "^5.19.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "class-transformer": "^0.2.0",
    "class-validator": "^0.9.1",
    "cpx": "^1.5.0",
    "custom-env": "^1.0.0",
    "dotenv": "^7.0.0",
    "form-data": "^3.0.0",
    "generate-password": "^1.5.0",
    "joi": "^14.3.1",
    "multer": "^1.4.2",
    "nestjs-cron": "^1.1.2",
    "papaparse": "^5.2.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.9.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "2.6.3",
    "rxjs": "6.4.0",
    "typeorm": "^0.2.15",
    "xlsx": "^0.15.3",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@nestjs/testing": "6.0.1",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/joi": "^14.3.2",
    "@types/node": "11.11.4",
    "@types/socket.io": "^2.1.4",
    "@types/supertest": "2.0.7",
    "jest": "24.5.0",
    "nodemon": "1.18.10",
    "prettier": "1.16.4",
    "supertest": "4.0.2",
    "ts-jest": "24.0.0",
    "ts-node": "8.0.3",
    "tsconfig-paths": "3.8.0",
    "tslint": "5.14.0",
    "typescript": "3.3.4000"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
